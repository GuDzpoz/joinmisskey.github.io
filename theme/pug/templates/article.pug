extends ./default.pug

block main
  #main.padding
    .container.pt-5.pb-3.mb-2.bg-white.main-shadow
      - let mtime = new Date(page.meta.mtime)
      article#article_maincontent.bg-white
        header.w-100
          h1= page.attributes.title
        if(headings.length > 1)
          #article_sidenav.my-2.p-3.bg-light
            +toc( headings, 2, "ul", "list-unstyled ml-3 page-index")
        section.pt-2.pb-4!= mainHtml

      block after_article
        .small.text-right.mt-3
          +editLink()

    .text-center
      +ad({ class: "container p-0", slot: "4446014841", allowFullWidth: "true" })
