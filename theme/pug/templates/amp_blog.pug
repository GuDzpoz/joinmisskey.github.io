extends amp_default
append preset
  include ../includes/_blog_preset

append meta
  include ../includes/_blog_schema

block main
  #main.padding
    .container.pt-5.pb-3.mb-2.bg-white.main-shadow
      article#article_maincontent.bg-white
        header.w-100
          h1= page.attributes.title
          div.d-flex.flex-wrap.small
            div.mr-2
              +fa_fw("clock")
              time(datetime=page.meta.mtime)=moment(page.meta.mtime).format('llll')
            +blog_badges(page)
            if(page.attributes.author)
              address.mb-0: a(href=page.attributes.author.url target="_blank" rel="noopener") Author: #{page.attributes.author.name}

        section.pt-2.pb-4!= mainHtml
        
        footer
          .d-flex.flex-wrap.my-2.bg-light
            if(pagePrev)
              a(href=`${site.url.path}${pagePrev.meta.permalink}`)#prev.p-3.flex-fill
                .container #[+i18n('prev')]: #{pagePrev.attributes.title}
            if(pageNext) 
              a(href=`${site.url.path}${pageNext.meta.permalink}`)#next.p-3.flex-fill
                .container #[+i18n('next')]: #{pageNext.attributes.title}

    .text-center.py-3
      amp-ad(class="container" width="100vw" height="320" type="adsense" data-ad-client="ca-pub-1736621122676736" data-ad-slot="4446014841" data-auto-format="rspv" data-full-width="")
        div(overflow="")
