mixin picture(img)
  - const iu = path.parse(img.src)
  - if (!img.sizes) img.sizes = "100vw, (min-width: 576px) 50vw, (min-width: 1200px) 30vw"
  picture
    source(srcset=`${urlPrefix}${iu.dir}/${iu.name}.360.webp 360w, ${urlPrefix}${iu.dir}/${iu.name}.720.webp 720w, ${urlPrefix}${iu.dir}/${iu.name}.webp 1200w` type="image/webp" sizes=img.sizes)
    source(srcset=`${urlPrefix}${iu.dir}/${iu.name}.360${iu.ext} 360w, ${urlPrefix}${iu.dir}/${iu.name}.720${iu.ext} 720w, ${urlPrefix}${iu.dir}/${iu.base}` sizes=img.sizes)
    img(src=img.src alt=img.alt class=img.class id=img.id title=img.title loading=img.loading)

