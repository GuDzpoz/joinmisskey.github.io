script#page_variables.
  var pathname = "/#{site.url.path}";
  var currentLocale = "#{locale}";
  var locales = !{JSON.stringify(site.locales)};
  var permalink = "#{page.meta.permalink.slice(locale.length + 1)}";
  var styleRequires = !{JSON.stringify(page.attributes.styleRequires)};
  !{site.ga ? `var gaId = "${site.ga};"` : ""}
  !{site.sw ? `var jm_pathToWorker = "${urlPrefix}/service_worker.js"` : ""}

block gtag
  if(site.ga)
    script(src=`https://www.googletagmanager.com/gtag/js?id=${site.ga}` async)

script(data-ad-client="ca-pub-1736621122676736" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")

link(rel="preload" href="https://cdn.jsdelivr.net/npm/yakuhanjp@3.3.0/dist/css/yakuhanjp.min.css" as="style" class="base-style")
link(rel="preload" href="https://cdn.jsdelivr.net/gh/tamaina/The-Japanese-Web-Fonts@v7.2.0/dist/NasuM/NasuM.css" as="style" class="base-style")
link(rel="preload" href="https://cdn.jsdelivr.net/npm/animate.css@3.7.0/animate.min.css" as="style" class="base-style")
each baseStyle in baseStyles
  link(rel="preload" href=`${site.url.path}/assets/styles/${baseStyle}.css` as="style" class="base-style")
each lazyStyle in lazyStyles
  link(rel="preload" href=`${site.url.path}/assets/styles/${lazyStyle}.css` as="style" class="lazy-style" data-name=lazyStyle disabled)

script(src=`${site.url.path}/assets/scripts/sw.js` async)
script(src=`${site.url.path}/assets/scripts/bootstrap.js` async)
script(src=`${site.url.path}/assets/scripts/main.js` async)
